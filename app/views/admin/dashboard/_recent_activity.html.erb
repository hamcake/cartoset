<div id='recent_activity'>
  <div class="top">
    <h2><%= t('.latest_activity').titleize %></h2>
  </div>
  <div class="middle">
    <ul class='clickable'>
    <% @recent_activity.each do |change|
      name, date_in_words, action_name, href = activity_message_for(change)
     %>
           <li class='<%= cycle("on", "on-hover", :name => 'recent_activity_cycle') %>'>
             <a href="<%= href %>"><%= name %></a> <p><%= action_name %></p> <p class="ago"><%= date_in_words %></p>
           </li>
      <%
      end %>
    </ul>
  </div>
  <div class="bottom"></div>
</div>
